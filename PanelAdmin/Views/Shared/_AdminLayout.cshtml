
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>W3.CSS</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
</head>
<body>

    <!-- Sidebar -->
    <div class="w3-sidebar w3-light-grey w3-bar-block" style="width:25%">
        <h3 class="w3-bar-item" style="font-weight: bold;">ADMIN PANEL</h3>
        <a href="#" class="w3-bar-item w3-button"><i class="fa-solid fa-house"></i> Anasayfa</a>
        <a href="#" class="w3-bar-item w3-button"><i class="fa-solid fa-icons"></i> Ikonlar</a>
        <a href="#" class="w3-bar-item w3-button bg-info"><i class="fa-solid fa-arrow-right"></i> Siteye Git</a>
        <a href="#" class="w3-bar-item w3-button bg-danger"><i class="fa-regular fa-circle-xmark"></i> Çıkış Yap</a>
    </div>

    <!-- Page Content -->
    <div style="margin-left:25%">

        <div class="w3-container" style="background-image: linear-gradient(120deg, #3498db, #8e44ad);">
            <h1>KISISEL WEB SITE</h1>
        </div>


        <div class="w3-container">
            @RenderBody()
        </div>

    </div>

</body>
</html>

